{% extends 'AamvDefaultBundle::base.html.twig' %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/aamvdefault/css/login.css') }}">
{% endblock css %}

{% block body %}
    <h2>Connexion</h2>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="login">
        <form action="{{ path("fos_user_security_check") }}" method="POST">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Login" />

            <input type="password" id="password" name="_password" required="required" placeholder="Password" />

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">MÃ©moriser</label>

            <input type="submit" id="_submit" name="_submit" value="Valider" />
        </form>
    </div>
{% endblock body %}