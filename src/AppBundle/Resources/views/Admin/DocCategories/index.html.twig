{% extends "AppBundle:Base:base.html.twig" %}

{% block title %}Catégories - Documents - Administration - {{ parent() }}{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/Admin/base.css') }}">
{% endblock css %}

{% block body %}
    <h2><a href="{{ path('admin') }}">Administration</a> / <a href="{{ path('admin_docs') }}">Documents</a> / Catégorie</h2>

    {% for flash in app.session.flashbag.get('admin.categories.error') %}
        <div class="alert alert-danger">{{ flash }}</div>
    {% endfor %}

    {% for flash in app.session.flashbag.get('admin.categories.success') %}
        <div class="alert alert-success">{{ flash }}</div>
    {% endfor %}

    {% if categories|length == 0 %}
        <div class="alert alert-warning">Il n'y a encore aucune catégorie de document sur le site.</div>
    {% endif %}

    <div class="alert alert-info"><a href="{{ path('admin_doc_categories_create') }}">Cliquez ici</a> pour ajouter une catégorie de document.</div>

    {% if categories|length > 0 or tools|length > 0 %}
        <table class="table table-striped table-hover table-categories">
            <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Réservée</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.name }}</td>
                    <td>{% if category.forMembers %}Oui{% else %}Non{% endif %}</td>
                    <td>
                        <a class="btn btn-info" href="{{ path('admin_doc_categories_edit', {'id': category.id}) }}">Modifier</a>
                        <form method="POST" class="remove" action="{{ path('admin_doc_categories_delete', {"id": category.id}) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-normal">Supprimer</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/jquery-confirm/jquery.confirm.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/Admin/default.js') }}"></script>
{% endblock javascripts %}
