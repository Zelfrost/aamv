{% endblock css %}

{% block body %}
    <h2><a href="{{ path('admin') }}">Administration</a> / <a href="{{ path('admin_disponibilities') }}">Disponibilités</a> / {{ disponibility.childminder.fullname }}</h2>

    {{ form_start(form) }}
