{% extends "AppBundle:Base:base.html.twig" %}

{% block title %}Outils - Administration - {{ parent() }}{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/Admin/base.css') }}">
{% endblock css %}

{% block body %}
    <h2><a href="{{ path('admin') }}">Administration</a> / Outils</h2>

    {% for flash in app.session.flashbag.get('admin.tools.error') %}
        <div class="alert alert-danger">{{ flash }}</div>
    {% endfor %}

    {% for flash in app.session.flashbag.get('admin.tools.success') %}
        <div class="alert alert-success">{{ flash }}</div>
    {% endfor %}

    {% if categories|length == 0 %}
        <div class="alert alert-warning">Il n'y a encore aucun outil sur le site.</div>
    {% endif %}

    <div class="alert alert-info"><a href="{{ path('admin_tools_create') }}">Cliquez ici</a> pour ajouter un outil.</div>

    {% if categories|length > 0 %}
        {% for type in categories %}
            <h3>
                {{ type.name }}
                {% if not type.year is null %}- {{ type.year }}{% endif %}
                {% if type.forMembers %}- <b>Réservés aux membres de l'association</b>{% endif %}
            </h3>

            <table class="table table-striped table-hover table-tool">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for tool in type.tools %}
                        <tr>
                            <td>{{ tool.id }}</td>
                            <td>{{ tool.name }}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('admin_tools_edit', {'id': tool.id}) }}">Modifier</a>
                                <form method="POST" class="remove" action="{{ path('admin_tools_delete', {"id": tool.id}) }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button class="btn btn-danger btn-normal">Supprimer</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endfor %}
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('vendor/jquery-confirm/jquery.confirm.min.js') }}"></script>
    <script src="{{ asset('vendor/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/app/js/Admin/default.js') }}"></script>
{% endblock javascripts %}
