{% extends "AppBundle:Base:base.html.twig" %}

{% block title %}Les outils - {{ parent() }}{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/Services/tools.css') }}">
{% endblock css %}

{% block body %}
    <h2 class="main">Les outils</h2>

    {% if types.aamv|length > 0 %}
        <h3>Ceux que nous mettons à votre disposition :</h3>

        <div class="col-md-12">
        {% for type in types.aamv %}
            <h4>{{ type.name }}</h4>

            {% for tool in type.tools %}
                <div class="row tool">
                    <div class="col-md-10">
                        {{ tool.name }}
                        {% if tool.updatedAt is not null %} - mis à jour le <strong>{{ tool.updatedAt|date('d/m/Y') }}</strong>{% endif %}
                    </div>
                    <div class="col-md-2">
                        <a href="/public/tools/aamv/{{ tool.realName }}"><span class="glyphicon glyphicon-download"></span> Télécharger</a>
                    </div>
                </div>
            {% endfor %}

            {% if not loop.last %}
                <hr>
            {% endif %}
        {% endfor %}
        </div>
    {% endif %}

    {% if types.veronalice|length > 0 %}
        <h3>Ceux mit gracieusement à votre disposition par "<a href="http://chezveronalice.pagesperso-orange.fr/">ChezVeronalice</a>" :</h3>

        <div class="col-md-12">
        {% for type in types.veronalice %}
            <h4>{{ type.name }}</h4>

            {% for tool in type.tools %}
                <div class="row tool">
                    <div class="col-md-10">
                        {{ tool.name }}
                        {% if tool.updatedAt is not null %} - mis à jour le <strong>{{ tool.updatedAt|date('d/m/Y') }}</strong>{% endif %}
                    </div>
                    <div class="col-md-2">
                        <a href="/public/tools/veronalice/{{ tool.realName }}"><span class="glyphicon glyphicon-download"></span> Télécharger</a>
                    </div>
                </div>
            {% endfor %}

            {% if not loop.last %}
                <hr>
            {% endif %}
        {% endfor %}
        </div>
    {% endif %}
{% endblock %}