{% extends 'AppBundle:Base:base.html.twig' %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/app/css/Base/login.css') }}">
{% endblock css %}

{% block body %}
    <div class="col-md-6 col-md-offset-3">
        {% for flash in app.session.flashbag.get('success') %}
            <div class="alert alert-success">{{ flash }}</div>
        {% endfor %}

        <h2>Se connecter</h2>

        {% if error %}
            <div class="bg-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {{ form(form) }}
        <a class="register" href="{{ path('register') }}">S'inscrire</a>
        <a class="forgot" href="{{ path('forgot_password') }}">Mot de passe oubli√©?</a>
    </div>
{% endblock body %}
