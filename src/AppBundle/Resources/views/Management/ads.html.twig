{% extends "AppBundle:Base:base.html.twig" %}

{% block title %}Gérer mes annonces - {{ parent() }}{% endblock %}

{% block body %}
    <h2 class="main">Gérer mes annonces</h2>

    {% for flash in app.session.flashbag.get('management.ads.error') %}
        <div class="alert alert-danger">{{ flash }}</div>
    {% endfor %}

    {% for flash in app.session.flashbag.get('management.ads.success') %}
        <div class="alert alert-success">{{ flash }}</div>
    {% endfor %}

    {% if ads|length == 0 %}
        <div class="alert alert-warning">Vous n'avez encore posté aucune annonce.</div>
    {% endif %}

    <div class="alert alert-info"><a href="{{ path('manage_ad_create') }}">Cliquez ici</a> pour poster une annonce.</div>

    {% if ads|length > 0 %}
        <div id="ads" class="col-md-12">
            {% if ads|length > 0 %}
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Titre de l'annonce</th>
                            <th>Nombre de vues</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ad in ads %}
                        <tr>
                            <td>{{ ad.title }}</td>
                            <td>{{ ad.viewCount }} vue{% if ad.viewCount > 1 %}s{% endif %}</td>
                            <td>
                                <a class="btn btn-info" href="{{ path('services_ad', {id: ad.id}) }}">Voir</a>
                                <a class="btn btn-success" href="{{ path('manage_ad_edit', {id: ad.id}) }}">Editer</a>
                                <a class="btn btn-danger" href="{{ path('manage_ad_delete', {id: ad.id}) }}">Supprimer</a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}