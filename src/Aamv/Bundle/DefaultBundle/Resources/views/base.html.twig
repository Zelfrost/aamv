<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}AAMV{% endblock %}</title>

        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/dist/css/bootstrap.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('vendor/bootstrap/dist/css/bootstrap-theme.min.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/aamvdefault/css/defaults.css') }}">
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/aamvdefault/css/pagination.css') }}">
        <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>

        {% block css %}{% endblock css %}
    </head>
    
    <body>
        <div class="container">
            {% include 'AamvDefaultBundle::header.html.twig' %}
            {% include 'AamvDefaultBundle::nav.html.twig' %}

            <div id="body" class="col-md-12">
                {% block body %}{% endblock %}
            </div>

            {% include 'AamvDefaultBundle::footer.html.twig' %}

            <script src="{{ asset('vendor/jquery/dist/jquery.min.js') }}"></script>
            {% block javascripts %}{% endblock %}
        </div>
    </body>
</html>
