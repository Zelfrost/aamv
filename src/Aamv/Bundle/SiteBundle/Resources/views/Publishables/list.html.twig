{% extends "AamvDefaultBundle::base.html.twig" %}

{% block title %}{{ title }} - {{ parent() }}{% endblock %}

{% block css %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/aamvsite/css/Publishables/list.css') }}">
{% endblock css %}

{% block body %}
    {% block page_title %}
        <h2 class="main">{{ title }}</h2>
    {% endblock page_title %}

    {% block top_publications %}{% endblock top_publications %}

    {% if publishables|length == 0 %}
        <p class="nothing">Il n'y a rien ici pour le moment.</p>
    {% endif %}
    {% for publishable in publishables %}
        <article>
            <a href=""><header>{{ publishable.title }}</header></a>
            <section>{{ publishable.content|raw|slice(0, 200) }} {% if publishable.content|length > 200 %}... <a href="">Lire la suite</a>{% endif %}</section>
            <footer>Publi√©e par <a href="" class="author">{{ publishable.author.firstname }} {{ publishable.author.name }}</a>, le {{ publishable.createdAt|localizeddate('full', 'none') }}</footer>
        </article>
    {% endfor %}

    {% include 'AamvDefaultBundle::pagination.html.twig' %}
{% endblock body %}